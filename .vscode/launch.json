        {
            "name": "Python: debug",
            "type": "python",
            "request":"launch",
            "cwd": "${workspaceFolder}",
            "program":"kubify/cli.py",
            "args": ["--test_logger", "debug"],
            "console":"integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
    ]
